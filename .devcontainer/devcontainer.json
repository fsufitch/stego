{
    "name": "Stego Devcontainer",
    "build": {
        "dockerfile": "./Containerfile",
        "context": "."
    },
    "workspaceMount": "type=bind,source=${localWorkspaceFolder},destination=/workspaces/stego,relabel=private",
    "workspaceFolder": "/workspaces/stego",

    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "msyrus.go-doc",
                "wdhongtw.gpg-indicator",
                "yzhang.markdown-all-in-one",
                "zxh404.vscode-proto3",
                "foxundermoon.shell-format"
            ]
        }
    }
}
